                else if lista.tipo_documento == 2
                  input#tipoDocumento.form-control(type="text", name="tipo_documento" value="PASAPORTE" disabled)
                else
                  input#tipoDocumento.form-control(type="text", name="tipo_documento" value="----" disabled)
            .col-sm-6
              .form-group
